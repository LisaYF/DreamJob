@model IEnumerable<WebApplication4.Models.Teacher>

@{
    ViewBag.Title = "Index";
}
<img src="~/images/Index1.jpg" height="100%" width="100%" style="position:absolute;z-index:-1000;opacity:0.5;" />

<div class="container">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Tname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tbatch)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tsubject)
                </th>
                <th></th>
            </tr>
        </thead>
        

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tbatch)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tsubject)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</div>